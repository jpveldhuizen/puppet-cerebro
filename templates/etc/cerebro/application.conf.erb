secret = "<%= @secret %>"
basePath = "<%= @basepath %>"
<% if @address -%>

http.address = <%= @address %>
<% end -%>
<% if @port -%>
http.port = <%= @port %>
<% end -%>

pidfile.path = "/var/run/cerebro/cerebro.pid"
rest.history.size = 50
data.path = "/var/cerebro/cerebro.db"
auth: {
<% if @ldap_auth_settings -%>
  type: ldap
  settings: {
<% @ldap_auth_settings.each do |k,v| -%>
    <%= k %> = "<%= v %>"
<% end -%>
    group-search {
<% @ldap_group_search_settings.each do |k,v| -%>
      <%= k %> = "<%= v %>"
<% end -%>
    }
  }
<% elsif @basic_auth_settings -%>
  type: basic
  settings: {
<% @basic_auth_settings.each do |k,v| -%>
    <%= k %> = "<%= v %>"
<% end -%>
  }
<% end -%>
}
hosts = [
<% @hosts.each do |host| -%>
  {
    host = "<%= host['host'] %>"
    name = "<%= host['name'] %>"
  <% if host['auth'] %>
    auth = {
      username = "<%= host['auth']['username'] %>",
      password = "<%= host['auth']['password'] %>"
    }
  <% end %>
  },
<% end -%>
]
